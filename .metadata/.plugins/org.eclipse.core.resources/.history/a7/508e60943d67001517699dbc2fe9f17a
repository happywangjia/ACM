import java.util.Scanner;

public class What {
	public static void main(String[] args) {
		MyString str = new MyString();
		Scanner cin = new Scanner(System.in);
		int n;
		while (true) {
			System.out.println("请选择将要进行的操作：");
			System.out.println("1、赋值");
			System.out.println("2、求长度");
			System.out.println("3、求子串");
			System.out.println("4、子串定位");
			System.out.println("5、替换");
			System.out.println("6、判相等");
			System.out.println("7、退出");

			n = cin.nextInt();
			switch (n) {
			case 1:
				str.strAssign();
				break;
			case 2:
				str.strlength();
				break;
			case 3:
				System.out.println("输入pos");
				int pos = cin.nextInt();
				System.out.println("输入len");
				int len = cin.nextInt();
				str.substring(pos, len);
				break;
			case 4:
				MyString substr = new MyString();
				System.out.println("输入子串");
				substr.strAssign();
				str.Index(substr, 0);
				break;
			case 5:
				MyString ob2 = new MyString();
				MyString ob3 = new MyString();
				System.out.println("输入子串");
				ob2.strAssign();
				System.out.println("输入替换串");
				ob3.strAssign();
				str.replace(ob2, ob3);
				break;
			case 6:
				MyString ob = new MyString();
				System.out.println("输入比较串");
				ob.strAssign();
				str.compare(ob);
				break;
			default:
				return;
			}

		}

	}
}
