package learning.ks5;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;


public class MyString {
	private static final int maxn=100;
	private char[] ch;
	private int curLen;
	
	MyString(){
		curLen=0;
		ch=new char[maxn];
	}
	public boolean strAssign(){
		curLen=0;
		Scanner cin=new Scanner(System.in);
		String in=cin.next();
		cin.close();
		for(int i=0;i<in.length();i++){
			ch[curLen++]=in.charAt(i);
		}
		System.out.println(in);
		return true;
	}
	public int strlength(){
		return curLen;
	}
	public boolean substring(int pos,int len){
		if(len>curLen){
			System.out.println("error");
			return false;
		}
		for(int i=pos;i<pos+len;i++){
			System.out.print(ch[i]);
		}
		System.out.println();
		return true;
	}
	public void Index(MyString ob,int pos,List<Integer> list){
		int i=pos,j=0;
		while(i<strlength()&&j<ob.strlength()){
			if(ch[i]==ob.ch[i]){
				++i;
				++j;
			}else{
				i=i-j+2;
				j=1;
			}
		}
		if(j>ob.curLen){
			System.out.print(i-ob.curLen);
			list.add(i-ob.curLen);
			Index(ob, j,list);
		}
	}
	public void getIndex(MyString ob,int pos,List<Integer> list){
		int i=pos,j=0;
		while(i<strlength()&&j<ob.strlength()){
			if(ch[i]==ob.ch[i]){
				++i;
				++j;
			}else{
				i=i-j+2;
				j=1;
			}
		}
		if(j>ob.curLen){
			list.add(i-ob.curLen);
		//	System.out.print(i-ob.curLen);
			getIndex(ob, j,list);
		}
	}
	public void replace(MyString ob2,MyString ob3){
		List<Integer> list=new ArrayList<Integer>();
		getIndex(ob2,0,list);
		char[] ss=new char[maxn];
		int len=curLen;
		int ll=0;
		int size=list.size();
		int w1=0,w2=0;
		int d=0;
		while(ll<size){
			w2=list.get(ll);
			ll++;
			for(int i=w1;i<w2;i++){
				ss[d++]=ch[i];
			}
			for(int i=0;i<ob2.curLen;i++){
				ss[d++]=ob2.ch[i];
			}
			w1=w2;
		}
		for(int i=w2;i<curLen;i++){
			ss[d++]=ob2.ch[i];
		}
		for(int i=0;i<d;i++){
			System.out.println(ss[i]);
		}
		System.out.println();
		for(int i=0;i<d;i++){
			ch[i]=ss[i];
		}
		curLen=d;
	}
	public boolean compare(MyString s2){
		int len1=strlength();
		int len2=s2.strlength();
		int len=len1<len2?len1:len2;
		int flag=0;
		for(int i=1;i<len;i++){
			if(ch[i]<s2.ch[i]){
				flag=-1;
				break;
			}
			if(ch[i]>s2.ch[i]){
				flag=1;
				break;
			}
		}
		if(flag==0){
			if(len1>len2) flag=1;
			else if(len1<len2) flag=-1;
		}
		for(int i=0;i<len1;i++){
			System.out.print(ch[i]);
		}
		if(flag==-1) System.out.print("<");
		else if(flag==0) System.out.print("=");
		else System.out.print(">");
		
		for(int i=0;i<len2;i++){
			System.out.print(s2.ch[i]);
		}
		System.out.println();
		
		return false;
	}	
}
