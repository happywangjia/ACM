package leetcode;

public class N14_Longest {
	public static String longestCommonPrefix(String[] strs) {
		int len=strs.length;
		int k=0;
		while(true){
			if(k>=strs[0].length()){
				break;
			}
			char c=strs[0].charAt(k);
			for(int i=1;i<len;i++){
				if(k>=strs[i].length()) break;
				if(strs[i].charAt(k)!=strs[0].charAt(k)) break;
			}
		}
		if(k==0) return null;
		return strs[0].substring(0,k+1);
	}
	public static void main(String[] args){
		String[] strs=new String[3];
		strs[0]="adfsd";
		strs[1]="adfdfd";
		strs[2]="adfdfd";
		System.out.println(longestCommonPrefix(strs));
	}
}
