package ahu;

import java.util.Scanner;

/**
 * 
 * @tag:配对
 * @Num:N_711.java
 * @author hijj
 * Create at: 2015年9月8日 下午12:54:27
 */
public class N_711 {
	public final static int MOD=(int)(1e9+7+0.5);
	public static int x,y;
	public static void main(String[] args){
		Scanner cin=new Scanner(System.in);
		while(cin.hasNextInt()){
			int n=cin.nextInt();
			int mod1=1;
			for(int i=n+1;i<=2*n;i++){
				mod1=mod1*i%MOD;
			}
			int mod2=1;
			for(int i=1;i<=n;i++){
				mod2=mod2*2%MOD;
			}
			gcd(mod2,MOD,x,y);
			
		
		}
	}
	public static void gcd(int a,int b,int x,int y){
		if(b==0){
			x=1;
			y=0;
			return;
		}
		gcd(b,a%b,x,y);
		int t=x;
		x=y;
		y=t-a/b*y;
	}
	
	

}
