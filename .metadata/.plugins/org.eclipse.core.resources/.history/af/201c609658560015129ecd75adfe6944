package ahu;

import java.util.Scanner;

/**
 * 
 * @tag:配对
 * @Num:N_711.java
 * @author hijj
 * Create at: 2015年9月8日 下午12:54:27
 */
public class N_711 {
	public final static int MOD=(int)(1e9+7+0.5);
	public static void main(String[] args){
		Scanner cin=new Scanner(System.in);
		while(cin.hasNextInt()){
			int n=cin.nextInt();
			int mod1=1;
			int k=n;
			for(int i=n+1;i<=2*n;i++){
				int z=i;
				while(z%2==0&&k!=0){
					z/=2;
					k--;
				}
				mod1=mod1*z%MOD;
			}
			int mod2=1;
			for(int i=0;i<k;i++){
				mod2*=2;
			}
			//System.out.println(mod2);
			System.out.println(mod1/mod2%MOD);
		}
	}
	
	

}
