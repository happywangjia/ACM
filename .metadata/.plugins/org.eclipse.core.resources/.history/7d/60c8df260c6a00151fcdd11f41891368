package learning;

import java.util.Comparator;
import java.util.Iterator;
import java.util.PriorityQueue;

public class learn_5 {
	public static void main(String[] args){
		Comparator<jj> cmp=new Comparator<jj>() {

			@Override
			public int compare(jj o1, jj o2) {
				if(o1.p<o2.p) return -1;
				else if(o1.p>o2.p) return 1;
				else return 0;
			}
		};
		PriorityQueue<jj> pQueue=new PriorityQueue<>(cmp);
		double[] pp={0.05,0.29,0.07,0.08,0.14,0.23,0.03,0.11};
		int[] ww={5,29,7,8,14,23,3,11};
		for(int i=0;i<8;i++){
			pQueue.add(new jj(ww[i],pp[i]));
		}
//		Iterator<jj> it=pQueue.iterator();
//		while(it.hasNext()){
//			System.out.println(it.next().print());
//		}
		while(!pQueue.isEmpty()){
			System.out.println(pQueue.peek().print());
		}
		
	}
	
	
}
class jj{
	int w;
	double p;
	jj(int w,double p){
		this.w=w;
		this.p=p;
	}
	public String print(){
		return this.w+" : "+this.p;
	}
}
