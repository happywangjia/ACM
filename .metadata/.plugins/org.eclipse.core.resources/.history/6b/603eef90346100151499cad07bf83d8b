package leetcode;

public class N7_reverse {
	public static int reverse(int x) {
		boolean fu=true;
		boolean flag=false;
		if(x<0){
			fu=false;
			x*=-1;
		}
		int sum=0;
		while(x/10>0){
			if(flag)
				sum=sum*10+x%10;
			if(flag==false&&x/10>0){
				flag=true;
				sum=sum*10+x%10;
			}
			x/=10;
		}
		sum=sum*10+x;
		if(sum==0) return sum;
		if(fu==false)
			return sum*-1;
		return sum;
	}
	public static void main(String[] args){
		System.out.println(reverse(-100));
	}
}
